{
  "name": "solana-cartesi-web3-adapter",
  "version": "0.1.0",
  "description": "",
  "main": "dist/src/main.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "type--removed-to-run-tests": "module",
  "scripts": {
    "prepack": "rm -rf ./dist && npm run build",
    "build": "tsc",
    "start": "node --inspect --watch --loader ts-node/esm ./src/main.ts",
    "m:test": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha",
    "test:ci": "npm run m:test -- --forbid-only",
    "test": "node --test --test-only --loader ts-node/esm test/index.test.ts",
    "m:test:watch": "nodemon -e ts,json --exec \"npm run m:test\"",
    "test:watch": "node --watch --loader ts-node/esm src/index.test.ts",
    "test:debug": "node --inspect --watch --loader ts-node/esm test/index.test.ts"
  },
  "author": {
    "name": "Calindra"
  },
  "directories": {
    "lib": "./lib",
    "src": "./src",
    "test": "./src"
  },
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chai": "^4.3.7",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@project-serum/anchor": "^0.25.0",
    "@solana/web3.js": "^1.66.2",
    "ethers": "^5.7.2"
  }
}
